{
  "typography": {
    "fonts": {
      "body": "Jost",
      "heading": "Transcity"
    },
    "scale": {
      "h1": { "size": "3rem", "weight": "800", "letterSpacing": "0.05em", "lineHeight": "1.2" },
      "h2": { "size": "2rem", "weight": "600", "letterSpacing": "0.03em", "lineHeight": "1.3" },
      "h3": { "size": "1.25rem", "weight": "500", "letterSpacing": "0.02em", "lineHeight": "1.4" },
      "body": { "size": "1rem", "weight": "400", "lineHeight": "1.75" },
      "emphasis": { "size": "3.5rem", "weight": "800", "letterSpacing": "0.06em", "lineHeight": "1.1" }
    }
  },
  "components": {
    "button": {
      "variants": {
        "primary": {
          "background": "var(--color-primary)",
          "text": "var(--color-surface)",
          "padding": "0.75rem 1.5rem",
          "hover": {
            "background": "var(--color-accent)",
            "transform": "scale(1.05)"
          },
          "focus": {
            "outline": "2px solid var(--color-primary-40)"
          }
        },
        "secondary": {
          "background": "transparent",
          "border": "1px solid var(--color-primary)",
          "text": "var(--color-primary)",
          "padding": "0.75rem 1.5rem",
          "hover": {
            "background": "var(--color-primary-10)",
            "transform": "scale(1.05)"
          },
          "focus": {
            "outline": "2px solid var(--color-primary-40)"
          }
        }
      },
      "borderRadius": "1rem",
      "shadow": "0 4px 16px rgba(0,0,0,0.1)",
      "transition": "all 0.3s ease"
    },
    "card": {
      "background": "var(--color-surface)",
      "padding": "1.5rem",
      "borderRadius": "1rem",
      "border": "none",
      "shadow": "0 4px 16px rgba(0,0,0,0.1)",
      "textAlign": "center"
    },
    "section": {
      "padding": "3rem 2rem",
      "background": "var(--color-bg)",
      "divider": {
        "style": "wavy",
        "height": "2rem",
        "color": "var(--color-primary)"
      }
    },
    "modal": {
      "background": "var(--color-surface)",
      "padding": "2rem",
      "borderRadius": "1rem",
      "shadow": "0 8px 32px rgba(0,0,0,0.2)",
      "maxWidth": "32rem",
      "position": "center"
    }
  },
  "theme": {
    "colors": {
      "primary": "var(--color-primary)",
      "accent": "var(--color-accent)",
      "text": "var(--color-text)",
      "background": "var(--color-bg)"
    },
    "glass": {
      "light": "var(--color-glass-light)",
      "dark": "var(--color-glass-dark)"
    }
  },
  "layout": {
    "grid": "single-column, flex-based responsive layout",
    "spacing": {
      "section": "4rem",
      "component": "1.5rem",
      "gap": "1.5rem"
    },
    "padding": {
      "container": "2rem",
      "component": "1.5rem"
    }
  },
  "animations": {
    "hoverScale": "transform: scale(1.05)",
    "fadeIn": "opacity: 0 to 1 over 0.5s",
    "slideIn": "translateY: 20px to 0 over 0.5s"
  }
}